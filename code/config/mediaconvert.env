# MediaConvert configuration shared by backend services.
# Update the placeholder ARNs/buckets to match your AWS account before running ./start-all.sh.

# Scene Summarization MediaConvert settings
export SCENE_SUMMARY_MEDIACONVERT_ROLE_ARN="arn:aws:iam::123456789012:role/SceneSummariesMediaConvert"
# Optional custom queue and endpoint
# export SCENE_SUMMARY_MEDIACONVERT_QUEUE_ARN="arn:aws:mediaconvert:us-east-1:123456789012:queues/Default"
# export SCENE_SUMMARY_MEDIACONVERT_ENDPOINT="https://abcd1234.mediaconvert.us-east-1.amazonaws.com"
export SCENE_SUMMARY_MEDIACONVERT_OUTPUT_PREFIX="scene-frames/"

# Subtitle MediaConvert settings
export SUBTITLE_MEDIACONVERT_ROLE_ARN="arn:aws:iam::123456789012:role/SubtitleMediaConvert"
# Optional custom queue and endpoint
# export SUBTITLE_MEDIACONVERT_QUEUE_ARN="arn:aws:mediaconvert:us-east-1:123456789012:queues/Default"
# export SUBTITLE_MEDIACONVERT_ENDPOINT="https://wxyz5678.mediaconvert.us-east-1.amazonaws.com"
export SUBTITLE_MEDIACONVERT_OUTPUT_PREFIX="subtitle-media/"
