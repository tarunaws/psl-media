# SMTP configuration for Flask /contact endpoint
# Example for Office 365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=tarun_bhardwaj@persistent.com
# SMTP_PASS=your-app-or-smtp-password
# SMTP_FROM=tarun_bhardwaj@persistent.com

# Required (set these to enable real emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Optional overrides
SMTP_FROM=
CONTACT_TO=tarun_bhardwaj@persistent.com

# Demo mode fallback: when true and SMTP isnâ€™t set, submissions are logged to contact_logs and return ok.
# Set to false in production to require SMTP.
CONTACT_ALLOW_NO_SMTP=false
